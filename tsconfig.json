{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@assets": ["./src/assets"],
      "@components": ["./src/components"],
      "@config": ["./src/config"],
      "@store/*": ["./src/store/*"],
      "@utils": ["./src/utils"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@hooks": ["./src/hooks"],
      "@models": ["./src/models"],
      "@schools/*": ["./src/scenes/Schools/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "jest"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/*",
    "src/**/*",
    "storybook/*",
    "storybook/**/*",
    "tools/*",
    "tools/**/*"
  ],
  "exclude": [
    "__tests__/**/*-test.tsx",
    "babel.config.js",
    "jest.config.js",
    "node_modules",
    "metro.config.js",
    "tools/*"
  ]
}